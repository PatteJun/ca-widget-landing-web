---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';

const title = "Thank You - CarDealerPro";
const description = "Thank you for your interest in our trade-in widget solution.";
---

<Layout {title} {description}>
  <Navbar />
  <main class="min-h-[80vh] flex items-center">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-24">
      <div class="max-w-3xl mx-auto text-center">
        <div class="mb-8">
          <div class="w-20 h-20 bg-primary/10 rounded-full mx-auto flex items-center justify-center mb-6">
            <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M5 13l4 4L19 7"
              />
            </svg>
          </div>
          <h1 class="text-4xl font-bold tracking-tight text-primary-text mb-6">
            Thank You for Your Interest!
          </h1>
          <p class="text-lg text-secondary-text mb-8">
            We've received your information and will contact you within the next 24 hours to schedule a personalized demonstration of our trade-in widget.
          </p>
          <a 
            href="/" 
            class="inline-block rounded-lg bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary/90 transition-colors"
          >
            Return to Homepage
          </a>
        </div>
        
        <div class="border-t border-gray-200 pt-8">
          <p class="text-sm text-secondary-text">
            In the meantime, if you have any urgent questions, feel free to contact us at 
            <a href="mailto:support@cardealerpro.com" class="text-primary hover:text-primary/90">
              support@cardealerpro.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>