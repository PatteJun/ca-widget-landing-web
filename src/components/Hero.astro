---
import BrowserMockup from './BrowserMockup.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative isolate pt-14 overflow-hidden">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-4xl text-center mb-20">
      <h1 class="text-4xl font-bold tracking-tight text-primary-text sm:text-6xl">
        {t('hero.title')}
      </h1>
      <p class="mt-6 text-lg leading-8 text-secondary-text">
        {t('hero.description')}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="#contact"
          class="rounded-lg bg-primary px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-primary/90"
        >
          {t('hero.cta.primary')}
        </a>
        <a href="#features" class="text-sm font-semibold leading-6 text-primary-text">
          {t('hero.cta.secondary')} <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>

    <div class="relative mt-16">
      <BrowserMockup />
    </div>
  </div>
</section>