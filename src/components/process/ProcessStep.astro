---
interface Props {
  id: number;
  title: string;
  description: string;
  icon: string;
}

const { id, title, description, icon } = Astro.props;
---

<div class="process-step flex flex-col items-center text-center transition-all duration-300">
  <div class="relative">
    <div class="w-20 h-20 rounded-full bg-white border-2 border-gray-100 flex items-center justify-center mb-6 transition-all duration-300">
      <Fragment set:html={icon} />
    </div>
    <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-sm font-semibold text-primary-text">
      {id}
    </div>
  </div>
  <h3 class="text-lg font-semibold text-primary-text mb-2">{title}</h3>
  <p class="text-sm text-secondary-text leading-relaxed">{description}</p>
</div>

<style>
  .process-step.active .rounded-full {
    @apply border-primary bg-primary/5;
  }
</style>