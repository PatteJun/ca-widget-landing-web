---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
  <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
    <Fragment set:html={icon} />
  </div>
  <h3 class="text-xl font-semibold text-primary-text mb-3">{title}</h3>
  <p class="text-secondary-text leading-relaxed">{description}</p>
</div>